<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/head') %>
  <body>
    <%- include("./partials/nav") %>
    <div>
      <h2>All blogs</h2>
      <% if (blogs.length>0){ %> <% blogs.forEach(blog =>{ %>
      <a href="/blogs/<%= blog._id %>">
        <h3><%= blog.title %></h3>
        <p><%= blog.snippet %></p>
      </a>
      <% }) %> <% } else { %>
      <p>No blogs found</p>
      <% } %>
    </div>
  </body>
</html>
